<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/singer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"

        android:contentDescription="@string/images_of_singers"
        android:cropToPadding="true"
        android:src="@mipmap/ic_launcher" />

    <TextView android:id="@+id/singer_textview"
        android:layout_toRightOf="@id/singer_image"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/singer_name_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/singer"/>



    <ImageView android:id="@+id/play_btn"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/aa"/>


</RelativeLayout>